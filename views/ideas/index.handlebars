{{#each ideas}}
<div class="card card-body mb-3">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block mb-2">Edit</a>
    <form method ="post" action="/ideas/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn btn-block btn-danger" 
        value="Delete">
    </form>
</div>

{{else}}
<h4>No videos Ideas avaiilable for display. </h4>
{{/each}}